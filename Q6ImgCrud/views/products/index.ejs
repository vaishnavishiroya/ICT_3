<h1>All Products</h1>

<a href="/products/create">Create New Product</a>

<table border="1">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td><%= product.category ? product.category.name : 'Uncategorized' %></td>
                <td><%= product.price %></td>
                <td>
                    <% if (product.images.length > 0) { %>
                        <% product.images.forEach(image => { %>
                            <img src="/uploads/products/<%= image %>" width="100" height="100" alt="<%= product.name %> Image">
                        <% }) %>
                    <% } else { %>
                        No Images
                    <% } %>
                </td>
                <td>
                    <a href="/products/<%= product._id %>/edit">Edit</a>
                    <form action="/products/<%= product._id %>/delete" method="POST" style="display:inline-block;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<a href="/categories">Back to Categories</a>